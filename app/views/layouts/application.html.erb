<!DOCTYPE html>
<html>
<head>
  <title>EtsyApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div>
    <ul class="header-nav">
      <% if user_signed_in? %>
        Logged  <strong>
          <%= current_user.email %>
        </strong>.
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-default" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-default" %>
        <%= link_to "Sign in", new_user_session_path, :class => "btn btn-default" %>
      <% end %>
      <li class="account">
        <div class="cart">
          <div class="fa fa-shopping-cart fa-2x">
          </div>
        </div>
      </li>
    </ul>
  </div>

  <%= yield %>

</body>
</html>
