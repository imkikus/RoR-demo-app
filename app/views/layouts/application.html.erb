<!DOCTYPE html>
<html>
<head>
  <title>EtsyApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-static-top" id="top" role="banner"> 
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Etsy App", root_path, :class => "navbar-brand" %>
      </div> 
      <ul class="nav navbar-nav">     
        <li> 
          <%= link_to "Categories", categories_path %>
        </li>
        <li> 
          <%= link_to "Products", products_path %>
        </li>
      </ul>
      <br/> 
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          Logged in as <strong>
            <%= current_user.email %>
          </strong>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-default" %>
          <%= link_to "Cart", order_path(646), :class => "btn btn-success" %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-default" %>
          <%= link_to "Sign in", new_user_session_path, :class => "btn btn-default" %>
          <%= link_to "Cart", root_path, :class => "btn btn-success" %>
        <% end %>
      </ul>
    </div>
  </header>
  <hr>
  <div class="container"> 
    <% if !notice.nil? %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if !alert.nil? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
