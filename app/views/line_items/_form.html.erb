<%= form_for(@line_item) do |f| %>

  <div class="unit-price">
    <%= f.label :unit_price %>
    <%= f.text_field :unit_price %>    
  </div>

  <div class="quantity">
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>    
  </div>

  <div class="tax">
    <%= f.label :tax %>
    <%= f.text_field :tax %>    
  </div>

  <div class="total">
    <%= f.label :total %>
    <%= f.text_field :total %>    
  </div>

  <div class="actions">
    <%= f.submit %>    
  </div>
  
<% end %>