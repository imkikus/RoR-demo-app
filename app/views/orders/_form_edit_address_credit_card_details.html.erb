<h3>Edit Details</h3>
<%= form_for @order, :url => order_edit_details_path(@order), method: :post do |f| %> 
  <div class="row">
    <div class="col-md-6">
      <%= f.label :shipping_address %>
      <%= text_area :shipping_address, :value, :class => "col-md-12", size: '90x5' %>
    </div>
    <div class="col-md-6">
      <%= f.label :billing_address %>
      <%= text_area :billing_address, :value, :class => "col-md-12", size: '90x5' %>      
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <label>Credit Card number</label><br/>
      <%= text_field :card_number, :value, :class => "col-md-12" %>      
    </div>
    <div class="col-md-3">
      <label>Expiry (mm/yyyy)</label><br/>
      <%= text_field :expiry_date, :value, :class => "col-md-12" %>      
    </div>    
    <div class="col-md-3">
      <label>CVV</label><br/>
      <%= text_field :cvv, :value , :class => "col-md-12" %>      
    </div>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-success" %>
  </div> 
<% end %>
<hr>