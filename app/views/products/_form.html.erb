<%= form_for(@product) do |f| %>

  <div class="name">
		<%= f.label :name %><br>
		<%= f.text_field :name %>
  </div>
  <div class="description">
		<%= f.label :description %><br>
		<%= f.text_field :description %>
  </div>
  <div class="category-id">
    <%= f.collection_select(:category_id, Category.order("name"), :id, :name) %>
  </div>  
  <div class="image">
		<%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="price">
    <%= f.label :price %><br>
		<%= f.text_field :price %>
  </div>
  <div class="tax-rate">
    <%= f.label :tax_rate %><br>
    <%= f.text_field :tax_rate %>
  </div>  
  <div class="actions">
		<%= f.submit %>
  </div>
<% end %>